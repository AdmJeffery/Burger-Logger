<div class="container">
    <div class="row">
        <div class="col-md-12 d-flex justify-content-center">
            <h1>Welcome to the OM NOM Station!</h1>
        </div>
            <div class="col-md-12 text-center disclaimer">
                <p>STUFF YO FACE</p>
            </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 d-flex justify-content-center">

        </div>
    </div>

    <div class="row">
        <div class="col-md-5 servedlist">
           <h3>Order's Up!</h3>
           <hr>
                <div class="row">
                    {{#each burgers}}
                        {{#unless this.devoured}}
                            <div class="col-md-8">
                                <pre>#{{this.id}}.{{this.burger_name}}</pre>
                                <hr>
                            </div>
                            <div class="col-md-2 mb-1">
                                <form class="eat-button">
                                    <input type="hidden" type="text" class="burger_id">
                                    <button type="submit" class="btn btn-xs devour" data-id={{id}}>OM NOM</button>
                                </form>
                            </div>
                        {{/unless}}
                    {{/each}}
                    <hr>

                </div> 
        </div>
        
    </div>
</div>
